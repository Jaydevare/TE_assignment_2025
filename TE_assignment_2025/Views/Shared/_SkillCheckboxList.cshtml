@model IEnumerable<TE_assignment_2025.Model.Skills>
@{
    var selected = ViewBag.SelectedSkillIds as int[] ?? Array.Empty<int>();
    string name = ViewBag.InputName as string ?? "selectedSkills";
}
<div class="mb-3">
    <label class="form-label">Skill Set</label>
    <div>
        @foreach (var s in Model)
        {
            var isChecked = selected.Contains(s.SkillsId) ? "checked" : "";
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="@name" value="@s.SkillsId" id="skill_@s.SkillsId" @isChecked />
                <label class="form-check-label" for="skill_@s.SkillsId">@s.SkillName</label>
            </div>
        }
    </div>
</div>
